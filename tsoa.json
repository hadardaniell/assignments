{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/controllers/**/*.tsoa.ts"
  ],
  "spec": {
    "specVersion": 3,
    "outputDirectory": "src/swagger",
    "basePath": "/api",
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "src/routes-tsoa",
    "basePath": "/api",
    "authenticationModule": "./src/common/middlewares/expressAuthentication.ts"
  }
}